{
  "swagger": "2.0",
  "info": {
    "description": "Sample server for delay-queue",
    "version": "1.0.0",
    "title": "Swagger delay-queue REST Api",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths": {
    "/messages": {
      "post": {
        "summary": "Schedule execution of received message.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "scheduled message",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Message"
            }
          }
        ],
        "description": "Optional extended description in CommonMark or HTML.",
        "responses": {
          "200": {
            "description": "Message was scheduled successfully"
          },
          "500": {
            "description": "Error occurred"
          }
        }
      }
    },
    "/messages/{messageId}": {
      "put": {
        "summary": "Schedule execution of received message.",
        "parameters": [
          {
            "name": "messageId",
            "in": "path",
            "description": "Id of scheduled message",
            "required": true,
            "type": "string",
            "format": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "scheduled message",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Message"
            }
          }
        ],
        "description": "Optional extended description in CommonMark or HTML.",
        "responses": {
          "200": {
            "description": "A JSON array of user names"
          },
          "500": {
            "description": "Error occurred"
          }
        }
      }
    }
  },
  "definitions": {
    "Message": {
      "type": "object",
      "properties": {
        "when": {
          "type": "integer",
          "example": 1546125386109,
          "format": "int64"
        },
        "event": {
          "type": "object"
        }
      }
    }
  }
}